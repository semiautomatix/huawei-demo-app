<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid android:color="#e8305a" />
            <stroke
                android:width="2dip"
                android:color="#e8305a" />
            <padding
                android:bottom="4dp"
                android:left="20dp"
                android:right="20dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid android:color="#ed5678" />
            <stroke
                android:width="2dip"
                android:color="#e8305a" />
            <padding
                android:bottom="4dp"
                android:left="20dp"
                android:right="20dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>